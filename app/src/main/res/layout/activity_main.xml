<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cristinazapata.dron.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Doodle Dron"
        android:textAlignment="center"
        android:textColor="#b5b5b5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galería"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/conectarse"
        android:layout_toStartOf="@+id/conectarse"
        android:layout_marginBottom="78dp"
        android:backgroundTint="#d1dc2e"
        android:textColor="#726e6e" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar vuelo"
        android:id="@+id/iniciarVuelo"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/conectarse"
        android:layout_toEndOf="@+id/conectarse"
        android:backgroundTint="#d1dc2e"
        android:textColor="#726e6e" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cómo Conectarse"
        android:id="@+id/conectarse"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#d1dc2e"
        android:textColor="#726e6e"
        android:onClick="cambiarPantalla"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/dji"
        android:layout_above="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
